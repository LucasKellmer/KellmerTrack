<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="50dp"
    android:layout_gravity="center"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/proress_loading_dialog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:indeterminate="true"
            android:textAlignment="center"
            app:indeterminateAnimationType="disjoint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:indicatorColor="@color/colorPrimary_200"
            />
        <TextView
            android:id="@+id/lbl_loading_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Configurando dispositivo..."
            app:layout_constraintTop_toBottomOf="@+id/proress_loading_dialog"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            >
        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>