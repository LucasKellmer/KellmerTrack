<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.ComprovanteFragment"
    android:background="@color/white">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="br.com.example.kellmertrack.ui.viewmodel.ComprovanteViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_comprovante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toTopOf="@+id/ll_buttons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.vipulasri.ticketview.TicketView
                android:id="@+id/ticketView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:ticketBackgroundColor="#F8F5D4"
                app:ticketCornerRadius="15dp"
                app:ticketCornerType="rounded"
                app:ticketDividerPadding="0dp"
                app:ticketDividerType="dash"
                app:ticketOrientation="horizontal"
                app:ticketScallopPositionPercent="60"
                app:ticketScallopRadius="10dp"
                app:ticketShowBorder="false"
                app:ticketShowDivider="true" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6"
                app:layout_constraintTop_toTopOf="@+id/cl_comprovante" />


            <TextView
                android:id="@+id/tv_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="KellmerTrack"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Comprovante de entrega"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_app" />

            <LinearLayout
                android:id="@+id/rl_contrato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/tv_title">

                <TextView
                    android:id="@+id/tv_contrato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contrato: "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_contrato_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.comprovante.contrato}"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="00001" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/rl_contrato">

                <TextView
                    android:id="@+id/tv_cliente_nome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente: "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_cliente_nome_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.comprovante.cliente}"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="LUCAS EDUARDO KELLMER" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_obra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/rl_cliente">

                <TextView
                    android:id="@+id/tv_obra_nome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obra: "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_obra_nome_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.comprovante.obra}"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="HOBIMIX UNIÃO DA VITÓRIA" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_quantidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@id/rl_obra"
                tools:layout_editor_absoluteX="10dp">

                <TextView
                    android:id="@+id/tv_quantidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantidade entregue"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_quantidade_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{viewModel.comprovante.quantidade + " M³"}'
                    android:textSize="28sp"
                    android:textStyle="bold"
                    tools:text="20 M³" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline">

                <LinearLayout
                    android:id="@+id/rl_recebedor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/guideline">

                    <TextView
                        android:id="@+id/tv_recebedor_nome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recebedor: "
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_recebedor_nome_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.comprovante.recebedor}"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="JARDEL MARINHO" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:text="Confirmo o recebimento da quantidade de concreto mencionada acima, atendendo plenamente às especificações solicitadas e em perfeitas condições de uso."
                    app:layout_constraintEnd_toEndOf="@+id/cl_comprovante"
                    app:layout_constraintStart_toStartOf="@+id/cl_comprovante"
                    app:layout_constraintTop_toBottomOf="@+id/rl_recebedor" />

                <ImageView
                    android:id="@+id/img_assinatura"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/cl_comprovante"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_text" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btn_confirmar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/custom_buttom_ok"
                android:text="Confirmar"
                android:textColor="@color/white"
                android:visibility="@{(viewModel.entrega.entregaEntity.status != 2) ? View.VISIBLE : View.GONE}"
                app:backgroundTint="@null" />


            <Button
                android:id="@+id/btn_voltar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/custom_buttom_back"
                android:text="Voltar"
                android:textColor="@color/colorPrimary_400"
                android:visibility="@{(viewModel.entrega.entregaEntity.status == 2) ? View.VISIBLE : View.GONE}"
                app:backgroundTint="@null" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>